<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Screens.SignInActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/signin_01"
            android:text="@string/signin_01"
            android:textColor="@color/textColor"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/signin_02"
            android:text="@string/signin_02"
            android:textColor="@color/textColor"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signin_03"
            android:hint="@string/signin_03"
            android:inputType="number"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/signin_04"
            android:hint="@string/signin_04"
            android:inputType="textPassword"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/signin_05"
            android:text="@string/signin_05"
            android:textColor="@color/textColor"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textAllCaps="false"
            android:id="@+id/signin_06"
            android:text="@string/signin_06"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/border_btn"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:id="@+id/signin_07"
            android:text="@string/signin_07"
            android:textColor="@color/textColor"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:id="@+id/signin_08"
            android:orientation="horizontal"
            android:background="@drawable/border_white"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:src="@drawable/ic_google_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"
                android:id="@+id/signin_08_1"
                android:text="@string/signin_08"
                android:textColor="@color/textColor"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/gray"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp">

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signin_09"
                android:text="@string/signin_09"
                android:textColor="@color/textColor"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/signin_10"
                android:text="@string/signin_10"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>