<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.EditProfileActivity">

    <LinearLayout
        android:background="@drawable/home_bar"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_margin="16dp"
            android:tint="@color/white"
            android:id="@+id/edit_back"
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_image"
        android:background="@color/gray"
        android:padding="20dp"
        android:layout_marginTop="-66dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="132dp"
        android:layout_height="132dp">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_width="46dp"
            android:layout_height="46dp" />

    </LinearLayout>

    <TextView
        android:layout_marginHorizontal="32dp"
        android:id="@+id/edit_name_txt"
        android:text="@string/edit_name"
        android:textColor="@color/textColor"
        android:textSize="12dp"
        android:layout_marginTop="64dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_name_edt"
        android:layout_marginHorizontal="32dp"
        android:textSize="18dp"
        android:outlineAmbientShadowColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginHorizontal="32dp"
        android:id="@+id/edit_mail_txt"
        android:text="@string/edit_mail"
        android:textColor="@color/textColor"
        android:textSize="12dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_mail_edt"
        android:layout_marginHorizontal="32dp"
        android:textSize="18dp"
        android:outlineAmbientShadowColor="@color/textColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:paddingVertical="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/edit_password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_password"
            android:textColor="@color/textColor"
            android:textSize="16dp" />

        <ImageView
            android:tint="@color/black"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:background="@color/gray"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <Button
        android:layout_marginHorizontal="32dp"
        android:textAllCaps="false"
        android:id="@+id/edit_button"
        android:text="@string/edit_btn"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:background="@drawable/border_btn"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>